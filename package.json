{
	"name": "@ylide/sdk",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"version": "0.8.0",
	"description": "Ylide Protocol SDK for cross-chain communication and messaging",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/ylide-io/sdk.git"
	},
	"files": [
		"lib/**/*",
		"src/**/*"
	],
	"scripts": {
		"test": "mocha -r ts-node/register 'src/tests/index.ts'",
		"dry-run": "ts-node src/__tests__/index.ts",
		"build": "rimraf ./lib && tsc",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint \"src/**/*.ts\" --fix",
		"prepublishOnly": "npm run lint",
		"preversion": "npm run lint",
		"docgen": "typedoc src/index.ts --name \"Ylide SDK\" --requiredToBeDocumented Class --out docs --plugin typedoc-plugin-coverage --excludeInternal"
	},
	"keywords": [
		"ylide",
		"messaging",
		"communication",
		"blockchain",
		"everscale",
		"ethereum"
	],
	"author": "Danila Simonov",
	"license": "ISC",
	"devDependencies": {
		"@types/brotli": "1.3.1",
		"@types/chai": "4.3.1",
		"@types/crypto-js": "4.1.1",
		"@types/deep-equal": "1.0.1",
		"@types/mocha": "9.1.1",
		"@types/node": "18.11.18",
		"@types/pako": "2.0.0",
		"@types/sjcl": "1.0.30",
		"@typescript-eslint/eslint-plugin": "5.49.0",
		"@typescript-eslint/parser": "5.49.0",
		"chai": "4.3.6",
		"deep-equal": "2.0.5",
		"eslint": "8.32.0",
		"eslint-config-prettier": "8.6.0",
		"eslint-plugin-jsdoc": "39.6.8",
		"eslint-plugin-prefer-arrow": "1.2.3",
		"mocha": "10.0.0",
		"prettier": "2.7.1",
		"rimraf": "3.0.2",
		"ts-node": "10.8.2",
		"typedoc": "0.23.24",
		"typedoc-plugin-coverage": "2.0.0",
		"typescript": "4.9.4"
	},
	"dependencies": {
		"@datastructures-js/binary-search-tree": "5.0.2",
		"@datastructures-js/linked-list": "5.2.4",
		"@ylide/smart-buffer": "0.0.10",
		"eventemitter3": "4.0.7",
		"idb": "7.1.0",
		"js-sha256": "0.9.0",
		"pako": "2.0.4",
		"tweetnacl": "1.0.3"
	}
}
